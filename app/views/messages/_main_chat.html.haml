.chat-main
  .chat-main__group-info
    %h2.current-group
      = current_user.name
      %p.member
        = current_user.name
    %a.edit{href: "/groups/#{@group.id}/edit"}
      Edit
  .chat-main__message-list
    .messages
      = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .form__mask
        = f.text_field :content, class: 'form__mask__text', placeholder: 'type a message'
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'form__mask__image__file'
      = f.submit 'Send', class: 'submit-btn'

